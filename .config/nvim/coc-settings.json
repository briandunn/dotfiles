{
  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "save"
      }
    },
    "ocamlLS": {
      "command": "ocaml-language-server",
      "args": ["--stdio"],
      "filetypes": ["ocaml"],
      "rootPatterns": ["dune"],
      "trace.server": "verbose"
    }
  },
  "prettier.disableLanguages": ["ruby"],
  "FSharp.SimplifyNameAnalyzer": true,
  "codeLens.enable": true,
  "solargraph.checkGemVersion": true,
  "solargraph.completion": true,
  "solargraph.definitions": true,
  "solargraph.diagnostics": true,
  "solargraph.folding": true,
  "solargraph.formatting": true,
  "solargraph.hover": true,
  "solargraph.logLevel": "warn",
  "solargraph.promptDownload": true,
  "solargraph.references": true,
  "solargraph.rename": true,
  "solargraph.symbols": true,
  "solargraph.trace.server": "off",
  "sql.database": "postgresql",
  "sql.formatOptions": { "linesBetweenQueries": 2, "language": "postgresql" },
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.enablePreview": true,
  "coc.preferences.willSaveHandlerTimeout": 1000,
  "coc.preferences.formatOnSaveFiletypes": [
    "elm",
    "elixir",
    "fsharp",
    "javascript",
    "javascriptreact",
    "json",
    "ocaml",
    "ruby",
    "rust",
    "sql",
    "typescript",
    "typescriptreact"
  ]
}
